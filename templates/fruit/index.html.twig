{% extends 'base.html.twig' %}

{% block title %}Fruit index{% endblock %}

{% block body %}
    <h1>Fruit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Pepins</th>
                <th>Kcal</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fruit in fruits %}
            <tr>
                <td>{{ fruit.id }}</td>
                <td>{{ fruit.nom }}</td>
                <td>{{ fruit.pepins ? 'Yes' : 'No' }}</td>
                <td>{{ fruit.kcal }}</td>
                <td>
                    <a href="{{ path('app_fruit_show', {'id': fruit.id}) }}">show</a>
                    <a href="{{ path('app_fruit_edit', {'id': fruit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_fruit_new') }}">Create new</a>
{% endblock %}
